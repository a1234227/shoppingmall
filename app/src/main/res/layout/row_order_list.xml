<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_row"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/product_bg">

    <TextView
        android:id="@+id/text_order_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="品名:香水檸檬"
        android:textColor="@color/row_home_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_list_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_order_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ID:10"
        android:textColor="@color/row_home_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_list_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order_list_name" />

    <ImageView
        android:id="@+id/imageview_list_order"
        android:layout_width="196dp"
        android:layout_height="132dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fakefruit_h" />

    <TextView
        android:id="@+id/text_order_detail_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="amount"

        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_list_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order_list_price" />

</android.support.constraint.ConstraintLayout>