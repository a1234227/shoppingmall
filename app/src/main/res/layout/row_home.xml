<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_row"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/product_bg">

    <TextView
        android:id="@+id/text_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="品名:香水檸檬"
        android:textColor="@color/row_home_text"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="價格:20"
        android:textColor="@color/string"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_home" />

    <ImageView
        android:id="@+id/imageview_home"
        android:layout_width="169dp"
        android:layout_height="111dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fakefruit_h" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="18dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coolblock" />
</android.support.constraint.ConstraintLayout>